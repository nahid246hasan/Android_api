<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/ic_launcher_foreground"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/teal_700"
        android:text="Student Management System"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/T_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Detail"
        android:textSize="50sp"
        android:layout_marginTop="40sp"
        android:layout_marginBottom="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal"

        />

    <EditText
        android:id="@+id/s_id"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="ID"
        android:textColorHint="@color/black"
        android:paddingStart="20dp"
        android:layout_marginBottom="10sp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/s_name"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Name"
        android:textColorHint="@color/black"
        android:paddingStart="20dp"
        android:layout_marginBottom="10sp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/s_email"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Email"
        android:textColorHint="@color/black"
        android:paddingStart="20dp"
        android:layout_marginBottom="10sp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/s_batch"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Batch"
        android:textColorHint="@color/black"
        android:paddingStart="20dp"
        android:layout_marginBottom="10sp"
        android:inputType="text"
        android:layout_gravity="start"
        />


    <EditText
        android:id="@+id/s_contact"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="Contact"
        android:textColorHint="@color/black"
        android:paddingStart="20dp"
        android:layout_marginBottom="10sp"
        android:inputType="number"

        />
    <EditText
        android:id="@+id/s_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Address"
        android:textColorHint="@color/black"
        android:paddingStart="20dp"
        android:layout_marginBottom="10sp"
        android:inputType="text"


        />
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Store Details"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/black"

        />
</LinearLayout>